<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2" author="sebastianklimas">
        <createTable tableName="recipes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_recipes"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_recipes_user_id"
                             referencedTableName="users"
                             referencedColumnNames="id"
                />
            </column>
            <column name="name" type="VARCHAR(100)"/>
            <column name="instructions" type="TEXT"/>
            <column name="visibility" type="VARCHAR(30)"/>
            <column name="created_at" type="timestamptz"/>
            <column name="updated_at" type="timestamptz"/>
        </createTable>
    </changeSet>
</databaseChangeLog>